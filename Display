	public void paintComponent(Graphics g){
		Graphics2D g2 = (Graphics2D) g;
		//g2.fillRect(0,0, 400, 400);
		Rectangle r = new Rectangle();
		g2.draw(r);
		g2.setColor(Color.BLUE);
		g2.draw(line);
		
	}
	
	//create a method to change the center of the line when screen resized(listeners)
	public static void main(String[] args) {
		new Display();
		JFrame frame = new JFrame();
		JPanel topButtonJPanel = new JPanel(new GridBagLayout());
		JPanel bottomButtonJPanel = new JPanel(new GridBagLayout());
		Container contentPane = frame.getContentPane();
		Display component = new Display();
		contentPane.add(component);
		
		
		
		frame.setTitle("Line Rotation");
		frame.setSize(400, 500);
		//System.out.println(frame);
		frame.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
		frame.setVisible(true);
		
		GridBagConstraints gbc = new GridBagConstraints();
		//gbc.insets = new Insets(10,10,10,10);
		gbc.gridx = 0;
		gbc.gridy = 0;
		
		JButton start = new JButton("Start");
		JButton stop = new JButton("Stop");
		topButtonJPanel.add(start,gbc);
		gbc.gridx = 1;
		gbc.gridy = 0;
		topButtonJPanel.add(stop, gbc);
		gbc.gridx = 0;
		gbc.gridy = 0;
		
		
		frame.add(topButtonJPanel, BorderLayout.NORTH);
		
	
		
	}

	
	
	
	
	
	
}


	public void makeFrame(){
		
		setTitle("Line Rotation");
		setSize(width, height);
		setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
		setMinimumSize(new Dimension(400, 400));
		setVisible(true);
		
	}
	
	public JPanel makeTopButtonJPanel(){
		JPanel topButtonJPanel = new JPanel(new GridBagLayout());
		JButton start = new JButton("Start");
		JButton stop = new JButton("Stop");
		topButtonJPanel.add(start,gbc);
		gbc.gridx = 1;
		gbc.gridy = 0;
		topButtonJPanel.add(stop, gbc);
		gbc.gridx = 0;
		gbc.gridy = 0;
		
		return topButtonJPanel;
	}
	
	public JPanel makeBottomButtonJPanel(){
		JPanel bottomButtonJPanel = new JPanel(new GridBagLayout());
		JButton hi = new JButton("Hi");
		bottomButtonJPanel.add(hi, gbc);
		
		return bottomButtonJPanel;
	}
	
	public void resize(){
		
		//Display component = new Display();

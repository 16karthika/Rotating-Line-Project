		JPanel topButtonJPanel = frame.makeTopButtonJPanel();
		JPanel bottomButtonJPanel = frame.makeBottomButtonJPanel();
		//have to change this when add a makeLineJPanel method
		JPanel lineJPanel = new JPanel(new GridBagLayout());
		
		
		
		
		frame.add(topButtonJPanel, BorderLayout.NORTH);
		frame.add(lineJPanel, BorderLayout.CENTER);
		frame.add(bottomButtonJPanel, BorderLayout.SOUTH);
		
	
		
	}

	
	
	
	
	
	
